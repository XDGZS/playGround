<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gradproject.playground.mapper.UserMapper">

    <insert id="addUser" parameterType="User">
        insert into user(email,password) values(#{email},#{password})
    </insert>
    <update id="updateUser" parameterType="User">
        update user set NickName=#{NickName},Name=#{Name},Address=#{Address},Phone=#{Phone},
        Birthday=#{Birthday},sex=#{sex},Occupation=#{Occupation},Password=#{Password} where ID=#{ID}
    </update>
    <delete id="deleteByEmail">
        delete from user where email=#{email}
    </delete>
    <delete id="delUserById">
        delete from user where id=#{id};
    </delete>
    <select id="findByEmail" parameterType="string" resultType="User">
        select * from user where email=#{eamil}
    </select>
    <select id="findAll" resultType="User">
        select * from user
    </select>
    <select id="findByEmail$Password" resultType="User">
        select * from user where email=#{arg0} and password=#{arg1}
    </select>
</mapper>