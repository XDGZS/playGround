<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gradproject.playground.mapper.ScenicMapper">

    <insert id="addScenic">
          insert into scenic values (null,#{ScenicName},#{ScenicInfo},#{ScenicFacilities},#{ScenicNumber},
          #{ScenicPrice},5,null,0)
    </insert>
    <update id="updateScenic">
        update  set ScenicName=#{ScenicName},ScenicInfo=#{ScenicInfo},ScenicFacilities=#{ScenicFacilities},
          ScenicNumber=#{ScenicNumber},ScenicPrice=#{ScenicPrice},ScenicGrade=#{ScenicGrade},ScenicComment=#{ScenicComment},
           Address=#{Address} where id=#{id}
    </update>
    <update id="discountScenic">
        update scenic set ScenicDiscount=1 where id=#{id}
    </update>
    <delete id="delScenic">
        delete from scenic where id=#{id}
    </delete>
    <select id="findAll" resultType="Scenic">
           select * from scenic
    </select>
    <select id="findById" resultType="Scenic" parameterType="integer">
        select * from scenic where id=#{id}
    </select>
</mapper>